{{!< default}}

<div class="container-fluid">
  {{#post}}
    <article class="{{post_class}}">
      <header class="post-header">
        {{#if image}}
        <img src="{{image}}" class="post-image" data-rjs="2"/>
        {{/if}}
        <h1 class="post-title">{{title}}</h1>
        <div class="post-meta">
          {{#author}}
            <span class="author-name"><a href="{{url}}">{{name}}</a></span>
          {{/author}}
          <span class="separator"></span>
          <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
          {{tags prefix=" &nbsp;·&nbsp; "}}
        </div>
      </header>
      <div class="post-content">
        {{content}}
      </div>
      <footer class="post-footer">
        {{#author}}
          <figure class="author-image">
            <a class="author-image-inner" href="{{url}}" style="background-image: url({{image}})">
              <span class="sr-only">{{name}}’s Picture</span>
            </a>
          </figure>
          <h1>{{name}}</h1>
          {{#if bio}}
            <p class="bio">{{bio}}</p>
          {{else}}
            <p class="more-posts">Read <a href="{{url}}">more posts</a> by this author.</p>
          {{/if}}
          <div class="author-meta">
            {{#if location}}
              <span class="author-location">Lives in {{location}}
            {{/if}}
            {{#if website}}
              <span class="separator hidden-xs"></span>
              <span class="author-link"><a href="{{website}}">{{website}}</a></span>
            {{/if}}
          </div>
        {{/author}}
      </footer>
    </article>
  {{/post}}
</div>

{{#contentFor 'footer'}}
{{>footer}}
{{/contentFor}}
